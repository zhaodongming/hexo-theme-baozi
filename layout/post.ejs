
<section>
    <div  class="container">
        <div class="main">
            <article class="post">
                <div class="posticon">
                    <img src="<%= page.cover||theme.default_cover %>" alt="">
                </div>
                <div class="posttitle">
                    <h1><%= page.title%></h1>
                    <p>by <%= theme.author %> on <%- date(page.date, "YYYY-MM-DD") %> <% %></p>
                </div>
                <div class="post-content">
                    <%- page.content %>
                </div>
            </article>
            <% if(theme.reward.switch){%>
                <%- partial('_partial/reward') %>
            <%}%>
            <% if(theme.gitment.switch){%>
            <%- partial('_partial/gitalk') %>
            <%}%>
        </div>
        <aside>

            <!--<%- partial('_partial/wx') %>-->
            <!--<%- partial('_partial/friendshipLink') %>-->
            <%- partial('_partial/catalog') %>
        </aside>

    </div>
</section>
<%- partial('_partial/backtop') %>